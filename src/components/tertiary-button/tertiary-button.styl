@import 'nib'
@require '~@/css/placeholder'
@require '~@/css/variables'

.ter-button
    outline: none
    position: relative
    height: 44px
    width 127px
    left: 9px
    right: 7px
    top: 0px
    font-family: SF Pro Text
    padding 0 1.375rem
    font-style: normal
    font-weight: 600
    font-size: 16px
    line-height: 22px
    background-color #FFFFFF
    border-radius: 8px
    color #536EFC
    border: 2px solid #FFFFFF
    &:hover, &.-hover
        color #6B83FF
        border-radius: 8px
    &:active, &.-active 
        color   #334ED9
        border-radius: 8px
    &:disabled, &.-disabled
        color #C2CFE0
        border-radius: 8px
    &.-n 
        padding 0 1rem
        font-size 0.875rem
        line-height (22 / 16)rem
        height (40 / 16)rem
        font-family: SF Pro Text
        text-align:center
    &.-m
        padding 0 1rem
        font-size (14 / 16)rem
        line-height (22 / 16)rem
        height (36 / 16)rem
        font-family: SF Pro Text
        text-align: center
        margin-right 4px
    &.-s
        padding 0 1rem
        font-size (11 / 16)rem
        line-height (22 / 16)rem
        height (30 / 16)rem
        font-family: SF Pro Text 
        