@import 'nib'
@require '~@/css/placeholder'
@require '~@/css/variables'

.input
    position relative 
    width 375px
    height 44px
    background #FFFFFF
    border 2px solid #D9D9D9
    box-sizing border-box
    padding-left 10px
    font-family SF Pro Display
    font-style normal
    font-weight normal
    font-size 14px
    line-height 18px
    color #CCCCCC
    display flex
    justify-content space-between
    white-space pre-line
    &.-disabled
        background #f2f2f2
    &.-backcolor 
        background #FFFFFF
        border 2px solid #DE3D68
        box-sizing border-box