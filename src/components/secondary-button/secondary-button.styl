@import 'nib'
@require '~@/css/placeholder'
@require '~@/css/variables'

.sec-button
    position: absolute;
    height: 44px;
    width 127px;
    left: 9px;
    right: 7px;
    top: 0px;
    font-family: SF Pro Text;
    font-style: normal;
    font-weight: 600;
    font-size: 16px;
    line-height: 22px;
    border: 1px solid #536EFC;
    box-sizing: border-box;
    background-color #E5E5E5;
    border-radius: 8px;
    color #536EFC
    &:hover, &.-hover
        border: 1px solid #6B83FF;   
        color #6B83FF
        border-radius: 8px;
    &:active, &.-active 
        color   #334ED9
        border: 1px solid #334ED9;
        border-radius: 8px;
    &:disabled, &.-disabled
        color #C2CFE0
        border: 1px solid #C2CFE0;
        border-radius: 8px;