@import 'nib'
@require '~@/css/placeholder'
@require '~@/css/variables'

.combobox
    box-sizing border-box
    padding 0 1rem
    font-size 0.875rem
    font-family: SF Pro Text
    text-align:center
    &.-m
        font-size (14 / 16)rem
        line-height (22 / 16)rem
        & .combobox__button
            padding 0px 0px 0px 0px 
    &.-s

        font-size (11 / 16)rem
        line-height (22 / 16)rem

    &.-l
        font-size (17 / 16)rem
        line-height (22 / 16)rem
        
.combobox__button
    position relative
    min-width 282px
    background #FFFFFF
    border: 2px solid #9094AD;
    box-sizing border-box
    font-family SF Pro Display
    font-style normal
    font-weight normal
    font-size inherit
    color #292C3C
    display flex
    margin-bottom 10px
    justify-content space-between
    padding-left 12px
    padding-top 7px

.combobox__foot-combox
    width 282px
    height 44px
    border: 2px solid white;
    box-sizing border-box
    font-family SF Pro Display
    font-style normal
    font-weight normal
    font-size 14px
    line-height 18px
    color #292C3C
    display flex
    align-items center
    padding 13px 77px 13px 12px
    &:hover
        background #E8EBFF

.combobox__foot
    display flex
    flex-direction column

.combobox__foot-sim
    width 282px
    box-shadow 0 0 10px 0

.combobox__button-feather
    position relative
    top 1px
    right 8px
    bottom 2px